<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fakewechat.MainActivity"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@mipmap/background">

<!--    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher_background"/>-->

    <TextView
        android:id="@+id/Tv_title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="手机号登陆"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"

        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="167dp"
        android:id="@+id/group1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:text="国家/地区 "
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"/>

        <TextView

            android:id="@+id/tv_3"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国（+86）"
            android:textColor="#38B838"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textSize="15sp"
            />
        <EditText

            android:id="@+id/edit_QQNumber"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textSize="15sp"

            android:textColor="#000000"
            android:background="@null"
            android:hint="请填写微信号/QQ号/邮箱"
            />
    </LinearLayout>

    <View
        android:id="@+id/fengexian1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#EFEFEF"
        android:layout_below="@id/group1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

    </View>

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="215dp"
        android:id="@+id/group2">
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:text="手机号 "
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/edit_PhoneNumber"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:textSize="15sp"
            android:hint="请填写手机号"

            />
    </LinearLayout>


    <View
        android:id="@+id/fengexian2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#EFEFEF"
        android:layout_below="@id/group2"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
    </View>

    <Button
        android:id="@+id/buttonChange"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="用微信号/QQ号/邮箱登录"
        android:background="@null"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="287dp"

        android:textColor="#6B7DA2"/>

    <Button
        android:clickable="false"
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="349dp"
        android:background="#A3DEA3"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="15sp"
        />



</RelativeLayout>
